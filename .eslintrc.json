{
  "plugins": [
    "es"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:es/no-2015",
    "plugin:compat/recommended"
  ],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "es/no-modules": "off"
  },
  "overrides": [
    {
      "files": [
        "rollup.config.js"
      ],
      "parserOptions": {
        "ecmaVersion": 6
      },
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}